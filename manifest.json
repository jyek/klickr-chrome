{
  "manifest_version": 2,

  "name": "Klickr",
  "description": "Klickr",
  "version": "1.0.0",

  "browser_action": {
    "default_icon": "img/icon.png",
    "default_popup": "popups/popup.html"
  },

  "content_scripts": [{
    "matches": ["http://*/*","https://*/*"],
    "css":["styles/styles.css"],
    "js": [
      "bower_components/jquery/dist/jquery.js",
      "bower_components/d3/d3.js",
      "content-scripts/recorder.js",
      "content-scripts/player.js",
      "content-scripts/saver.js"
    ]
  }],

  "background": {
    "scripts": [
      "bower_components/jquery/dist/jquery.js",
      "bg/helpers.js",
      "bg/bg-recorder.js",
      "bg/background.js"
    ]
  },

  "web_accessible_resources": [
    "content-scripts/views/saver.html",
  ],

  "permissions": [
    "<all_urls>",
    "tabs",
    "storage",
    "unlimitedStorage"
  ]
}