{
  "manifest_version": 2,

  "name": "Klickr",
  "description": "Klickr Client Plugin",
  "version": "1.0.0",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },

  "content_scripts": [{
    "matches": ["http://*/*","https://*/*"],
    "js": ["./libs/jquery-2.0.3.min.js", "mousetrap.min.js"]
  }],

  "background": {
    "scripts": ["listener.js"]
  },

  "permissions": [
    "<all_urls>",
    "tabs",
    "storage",
    "unlimitedStorage"
  ]
}