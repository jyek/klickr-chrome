{
  "manifest_version": 2,

  "name": "Klickr",
  "description": "Klickr",
  "version": "1.0.0",

  "browser_action": {
    "default_icon": "img/icon.png",
    "default_popup": "popups/popup.html"
  },

  "content_scripts": [{
    "matches": ["http://*/*","https://*/*"],
    "js": ["./libs/jquery-2.0.3.min.js", "content-scripts/recorder.js"]
  }],

  "background": {
    "scripts": ["bg/background.js"]
  },

  "permissions": [
    "<all_urls>",
    "tabs",
    "storage",
    "unlimitedStorage"
  ]
}